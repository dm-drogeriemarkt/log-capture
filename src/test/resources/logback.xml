<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="ERROR"><!-- set error log level here to make sure that LogCapture correctly sets it for capturing less severe messages -->
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
